<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable name="canSearch" type="Boolean" />
        <variable name="tags" type="java.util.ArrayList&lt;String>" />
        <variable name="isLoading" type="Boolean" />
<!--        <variable name="onTextChanged" type="androidx.databinding.adapters.TextViewBindingAdapter.OnTextChanged" />-->
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:background="#FEF1D8"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:context=".views.fragments.SearchFragment">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-100dp"
                android:scaleX="1.7"
                android:scaleY="0.9"
                android:rotation="12"
                android:alpha="0.2"
                android:background="@drawable/bg_recipe" />

            <LinearLayout
                android:id="@+id/header"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    app:name="@{@string/search_recipe}"
                    layout="@layout/appbar"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="60dp">

<!--
       android:onTextChanged="@{onTextChanged}"
 -->
                    <EditText
                        android:id="@+id/etSearchTag"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:enabled="@{canSearch}"
                        android:id="@+id/btnAddTag"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/add_ingredient"
                        />

                </LinearLayout>



                <com.google.android.material.chip.ChipGroup
                    android:padding="8dp"
                    android:minHeight="50dp"
                    android:id="@+id/chip_group_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipsList="@{tags}"
                    app:context="@{context}"
                    >

                    <!--                <include-->
                    <!--                    layout="@layout/item_ingredient_chip"-->
                    <!--                    />-->

                    <!--                <include-->
                    <!--                    layout="@layout/item_ingredient_chip"-->
                    <!--                    />-->
                    <!--                <include-->
                    <!--                    layout="@layout/item_ingredient_chip"-->
                    <!--                    />-->
                    <!--                -->
                    <!--                <include-->
                    <!--                    layout="@layout/item_ingredient_chip"-->
                    <!--                    />-->


                </com.google.android.material.chip.ChipGroup>



                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/search_recipes"
                    android:layout_gravity="center"
                    android:drawableEnd="@drawable/ic_search_white"
                    android:enabled="false"

                    />


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@+id/header"
                android:id="@+id/recipesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:itemCount="2"
                tools:listitem="@layout/item_recipe_layout"
                android:visibility="@{(isLoading!=null &amp;&amp; !isLoading) ? View.VISIBLE : View.GONE}"
                />

            <LinearLayout
                android:layout_below="@+id/header"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ProgressBar
                    android:layout_marginTop="120dp"
                    android:layout_weight="1"
                    android:id="@+id/loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    style="?android:progressBarStyleLarge"
                    android:visibility="@{(isLoading!=null &amp;&amp; isLoading) ? View.VISIBLE : View.GONE}"
                    />

            </LinearLayout>




        </RelativeLayout>

    </ScrollView>
</layout>