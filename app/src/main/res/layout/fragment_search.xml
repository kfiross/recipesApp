<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="tags" type="java.util.ArrayList&lt;String>" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".views.fragments.SearchFragment">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FEF1D8"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-100dp"
                android:scaleX="1.7"
                android:scaleY="0.9"
                android:rotation="12"
                android:alpha="0.4"
                android:background="@drawable/bg_recipe" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    app:name="@{@string/search_recipe}"
                    layout="@layout/appbar"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="60dp">

                    <EditText
                        android:id="@+id/et_searchTag"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/btnAddTag"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Add"
                        />

                </LinearLayout>



                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipsList="@{tags}"
                    app:context="@{context}"
                    >

                    <!--                <include-->
                    <!--                    layout="@layout/item_ingredient_chip"-->
                    <!--                    />-->

                    <!--                <include-->
                    <!--                    layout="@layout/item_ingredient_chip"-->
                    <!--                    />-->
                    <!--                <include-->
                    <!--                    layout="@layout/item_ingredient_chip"-->
                    <!--                    />-->
                    <!--                -->
                    <!--                <include-->
                    <!--                    layout="@layout/item_ingredient_chip"-->
                    <!--                    />-->


                </com.google.android.material.chip.ChipGroup>



                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:backgroundTint="@android:color/black"
                    android:layout_gravity="center"
                    android:drawableEnd="@drawable/ic_search"
                    android:drawableTint="#fff"

                    />

                <!--        <androidx.recyclerview.widget.RecyclerView-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            tools:listitem="@layout/item_ingredient_chip"-->
                <!--            tools:scrollbars="horizontal"-->
                <!--            tools:itemCount="5"-->
                <!--            app:spanCount="2"-->
                <!--            tools:orientation="horizontal"-->
                <!--            tools:layoutManager="GridLayoutManager"-->
                <!--            />-->


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recipesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_recipe_layout" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>




</layout>