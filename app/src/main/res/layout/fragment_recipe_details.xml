<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="navController"
            type="androidx.navigation.NavController" />

        <variable
            name="recipe"
            type="com.recipesapp.recipesapp.data.model.Recipe" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_recipe2"
            android:scaleX="-1.1"
            android:scaleY="1.2" />

        <LinearLayout
            android:id="@+id/layout_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:onClick="@{(v)-> navController.popBackStack()}"
                android:src="@drawable/ic_back" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@{recipe.name}"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_bar"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            tools:context=".views.fragments.RecipeDetailsFragment">

            <ImageView
                android:background="@color/placeholder"
                app:imageUrl="@{recipe.image}"
                app:error="@{@drawable/not_found}"
                app:placeholder="@{@color/purple_700}"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Making Time:"
                android:textColor="#000"
                android:textSize="18sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Difficulty:"
                android:textColor="#000"
                android:textSize="18sp" />


            <Space
                android:layout_width="wrap_content"
                android:layout_height="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients:"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <ListView
                android:id="@+id/list_ingredients"
                items="@{recipe.ingredients}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@null"
                tools:layout_height="170dip"
                tools:listitem="@layout/list_item_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steps:"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <ListView
                android:id="@+id/list_steps"
                items="@{recipe.steps}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@null"
                tools:layout_height="150dip"
                tools:listitem="@layout/list_item_content" />

        </LinearLayout>
    </RelativeLayout>


</layout>
